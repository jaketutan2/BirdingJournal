@Model BirdSighting
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Update Bird Sighting</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">

    <link rel="stylesheet" href="~/css/site.css" crossorigin="anonymous">
	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	<!-- twitter-typeahead -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/corejs-typeahead/1.3.1/typeahead.bundle.min.js"></script>
	<script src="/_framework/aspnetcore-browser-refresh.js"></script>
	<script src="~/js/site.js"></script>
  </head>
<body>
    <form method="post" action="@Url.Action("SubmitBirdSightingUpdate", "Home", new { id = @Model.BirdSightingID })">
        @await Html.PartialAsync("BirdSearchView")

        <label for="Location">Location</label>
        <input type="text" class="form-control" id="Location" name="Location" value="@Model.Location" />

        <label for="Date">@Model.SpottedDate</label>
        <input type="date" class="form-control" id="SpottedDate" name="SpottedDate" value="@Model.SpottedDate" />
        
        <label for="Notes">Notes: </label>
        <input type="text" class="form-control" id="Notes" name="Notes" value="@Model.Notes" />

        <button type="submit">Save</button>
    </form>

    <script>
        $.ajax({
        url: "/Home/SubmitBirdSightingUpdate",
        type: "PUT",
        data: JSON.stringify(model),
        contentType: "application/json",
        success: function(response) {
            // Handle the success response
        },
        error: function(xhr) {
            // Handle the error response
        }
    });

    </script>
</body>
</html>